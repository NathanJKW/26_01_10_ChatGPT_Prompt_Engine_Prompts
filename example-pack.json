{
  "id": "example-pack",
  "name": "Example Pack",
  "templates": [
    {
      "id": "rewrite-friendly",
      "name": "Rewrite Friendly",
      "prompt": "Rewrite in a {{tone}} tone.\n\n{{text}}\n\nUse emojis: {{useEmojis}}",
      "variables": {
        "tone": { "type": "select", "required": true, "options": ["friendly", "professional"] },
        "text": { "type": "textarea", "required": true },
        "useEmojis": { "type": "boolean", "required": false, "default": false }
      }
    }
  ]
}
